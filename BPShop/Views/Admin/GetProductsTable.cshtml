@model IQueryable<BPShop.Enities.Product>

@{
    ViewBag.Title = "GetProductsTable";
    Layout = null;
}

<style>
    table {
        border-collapse: collapse;
        width: 40%;
        margin-top: 20px;
        margin-left:80px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .edit-button {
        background-color: #4caf50;
        color: white;
        border: none;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
        margin: 2px;
        cursor: pointer;
    }
</style>

<table id="ProductsTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Count</th>
            <th>CountFlowersInBouquet</th>
            <th>ProductType</th>
            <th>SearchPrompt</th>
            <th>FlowersType</th>
            <th>ImgRef</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ID</td>
                <td>@product.Name</td>
                <td>@product.Cost</td>
                <td>@product.Description</td>
                <td>@product.Count</td>
                <td>@product.CountFlowersInBouquet</td>
                <td>@product.ProductType</td>
                <td>@product.SearchPrompt</td>
                <td>@product.FlowersType</td>
                <td>@product.ImgRef</td>
                <td><input onclick="EditProductsForm('@product.ID')" class="edit-button" type="button" value="Редактирование" /></td>
            </tr>
        }
    </tbody>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Content/Site.js"></script>
    <script>
    function EditProductsForm(productId) {
        showLoader();
        $.get('@Url.Action("EditProductsForm")?productId=' + productId, function (data) {
            hideLoader();
            $('#RenderBody').html(data);
        });
    }
    </script>
</table>

