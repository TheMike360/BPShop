@model IQueryable<BPShop.Enities.Product>

@{
    ViewBag.Title = "GetProductsTable";
    Layout = ViewBag.Layout;
}

<style>
    table {
        border-collapse: collapse;
        margin-right: 2rem;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<table id="ProductsTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Название</th>
            <th>Цена</th>
            <th>Описание</th>
            <th>Количество</th>
            <th>Количество цветков в букете</th>
            <th>Тип продукта</th>
            <th>Слова для поиска по сайту</th>
            <th>Тип цветка</th>
            <th>Название фото</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ID</td>
                <td>@product.Name</td>
                <td>@product.Cost</td>
                <td>@product.Description</td>
                <td>@product.Count</td>
                <td>@product.CountFlowersInBouquet</td>
                <td>@product.ProductType</td>
                <td>@product.SearchPrompt</td>
                <td>@product.FlowersType</td>
                <td>@product.ImgRef</td>
                <td>
                    <div class="adminEedit-div">
                        <a href="@Url.Action("EditProductsForm", new {productId = product.ID})" class="edit-button">Редактировать</a>
                        <a href="@Url.Action("DeleteProduct", new { productId = product.ID})">🗑️</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

