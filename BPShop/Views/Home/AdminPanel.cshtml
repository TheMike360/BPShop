
@{
    ViewBag.Title = "AdminPanel";
    Layout = null;
}

<style>
    body {
        display: flex;
        align-items: center;
        justify-content: center;
        padding-bottom: 20px;
        font-family: 'CenturyGothic', Arial, sans-serif;
        color: black;
        background-color: #f1f6ce;
        flex-direction: column;
    }

    form {
        text-align: center;
        width: 350px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input {
        margin-bottom: 5px;
    }

        input[type="submit"] {
            background: #d26b57;
            width: 250px;
            height: 50px;
            color: #fff;
            text-decoration: none;
            border-radius: 10px;
            cursor: pointer;
            border: none;
            margin-top: 15px;
        }

    .navPanel {
        display: flex;
        align-items: center;
        position: absolute;
        flex-direction: column;
        margin-left: 20px;
        top: 25%;
        left: 15px;
    }

        .navPanel input[type="button"] {
            margin-bottom: 10px;
            background: #d26b57;
            width: 180px;
            height: 50px;
            color: #fff;
            text-decoration: none;
            border-radius: 10px;
            cursor: pointer;
            border: none;
            margin-bottom: 50px;
        }
</style>

<h1>AdminPanel</h1>

<div class="navPanel">
    <input onclick="ShowProducts()" id="Products" type="button" value="Продукты" />
    <input onclick="GetAddProducts()" id="AddProducts" type="button" value="Добавить товары" />
</div>

<div id="RenderBody"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function GetAddProducts() {
        $.get('@Url.Action("AddProductsForm")', function (data) {
            $('#RenderBody').replaceWith(data);
        });
        $.get('@Url.Action("AddProductsForm")', function (data) {
            $('#ProductsTable').replaceWith(data);
        });
    }

    function ShowProducts() {
        $.get('@Url.Action("GetProductsTable")', function (data) {
            $('#RenderBody').replaceWith(data);
        });
        $.get('@Url.Action("GetProductsTable")', function (data) {
            $('#AddProductsForms').replaceWith(data);
        });
    }
</script>










